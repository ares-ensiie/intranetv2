body{
  background-image: url(<%= asset_path 'bg.png' %>);
  background-size: cover;
  background-attachment: fixed;
}
.login-container{
  margin-top: 5em;
}

.panel-title.with-button{
  padding-top: 7.5px
}

.birthday {
	border-radius: 6px;
	background-color: #eee;
	padding: 25px;
	padding-top: 10px;
}

.blue {
	color: #64BDDA;
}

.right {
	text-align: right;
}

.bold {
	font-weight: bold;
}

.profile-links{
	margin-top: 14px;
}

.profile-links .fa {
	font-size: 18px;
}

.btn-file {
    position: relative;
    overflow: hidden;
}
.btn-file input[type=file] {
    position: absolute;
    top: 0;
    right: 0;
    min-width: 100%;
    min-height: 100%;
    font-size: 100px;
    text-align: right;
    filter: alpha(opacity=0);
    opacity: 0;
    outline: none;
    background: white;
    cursor: inherit;
    display: block;
}

.btn-file .form-group {
	margin-bottom: 0px;
}
