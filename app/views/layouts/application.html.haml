!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %title Intranet
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    - if user_signed_in?
      = render "shared/nav"
    .container
      - if user_signed_in?
        - if !current_user.name || !current_user.lastname || ! current_user.phone || ! current_user.address || ! current_user.email
          .alert.alert-danger{:role => "alert"}
            Votre profil est incomplet. Merci de le completer
            = link_to "en cliquant ici.", edit_user_path(current_user)
      = yield

- if flash[:notice]
  :javascript
    toastr.success("#{flash[:notice]}")
- if flash[:error]
  :javascript
    toastr.error("#{flash[:error]}")
- if flash[:alert]
  :javascript
    toastr.error("#{flash[:alert]}")

